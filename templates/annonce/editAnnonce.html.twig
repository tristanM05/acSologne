{% extends "base.html.twig" %}
{% block body %}
<div class="wrapper container">
    <div class="row">
        <div class="col-lg-9">
            <h1 class="text-center py-5">Modifier votre annonce</h1>
            <hr id="hrContact">
            <div class="adsForm">
            <h2 class="mb-4">{{annonce.title}}</h2>
                <form action="{{ path('editAnnonce',{'slug': annonce.slug}) }}" name="annonce" method="post" enctype="multipart/form-data">
                    <div>
                        {{ form_row(form.title) }}
                        {{ form_row(form.annonceCat) }}
                        <div class="mb-3">
                            <label for="images">SÃ©lectionner une ou plusieurs images:</label>
                            <input type="file" multiple class="form-control p-1" name="photos[]" id="photos">
                        </div>
                        {{ form_row(form.content) }}
                        <input type="submit" class="btn btn-primary mb-4" value="Valider">
                    </div>
                {{ form_end(form) }}
                <div class="row">
                    {% for a in annonce.images %}
                        <div class="col-lg-4">
                            <img src="{{asset('images/annonce/' ~ a.src)}}" alt="" class="adsImg">
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            {% include "partials/sidebar.html.twig" %}
        </div>
    </div>
</div>
{% endblock %}