{% extends "base.html.twig" %}
{% block body %}
<div class="wrapper container">
    <div class="row">
        <div class="col-lg-9">
            <h1 class="text-center py-5">Ajouter une nouvelle annonce</h1>
            <hr id="hrContact">
            <div class="adsForm card mb-5">
            <h2 class="mb-4 card-header">Création de l'annonce</h2>
                <form action="{{ path('createAnnonce') }}" name="annonce" method="post" enctype="multipart/form-data">
                    <div class="card-body">
                        {{ form_row(form.title) }}
                        {{ form_row(form.annonceCat) }}
                        <div class="mb-3">
                            <label for="images">Sélectionner une ou plusieurs images:</label>
                            <input type="file" multiple class="form-control p-1" name="photos[]" id="photos">
                        </div>
                        {{ form_row(form.content) }}
                    </div>
            <div class="card-footer">
                <input type="submit" class="btn btn-primary btn-block" value="Valider">
            </div>
                {{ form_end(form) }}
            </div>
        </div>
        <div class="col-lg-3">
            {% include "partials/sidebar.html.twig" %}
        </div>
    </div>
</div>
{% endblock %}