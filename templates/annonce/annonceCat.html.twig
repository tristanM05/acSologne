{% extends 'base.html.twig' %}

{% block title %}Les annonces{% endblock %}

{% block body %}
<div class="wrapper container">
    <div class="row">
        <div class="col-lg-9">
            {% if category.libelle == 'appareils' %}
                <h1 class="text-center py-5">Les Appareils</h1>
            {% elseif category.libelle == 'equipements' %}
                <h1 class="text-center py-5">Les Equipements</h1>
            {% elseif category.libelle == 'divers' %}
                <h1 class="text-center py-5">Petite Annonces diverse</h1>
            {% endif %}
            {% for a in category.annonces %}
            <div class="row p-3 mt-2">
                <div class="col-lg-4">
                    <img src="{{asset('images/annonce/' ~ a.images.first.src)}}" alt="" class="img-fluid mt-2 imgActu">
                </div>
                <div class="col-lg-8">
                    <h2>{{a.title}}</h2>
                    <p>
                        {{a.content|slice(0,250)}}...
                    </p>
                    <small>post√© le: {{a.createdAt|date('d/m/Y')}}</small>
                    <div>
                    {% if category.libelle == 'equipements' %}
                        <a href="{{path('annonce_detail', {'cat': 'equipements','slug': a.slug})}}"><i class="fas fa-book-open btn btn-primary mr-2"></i></a>
                    {% elseif category.libelle == 'appareils' %}
                        <a href="{{path('annonce_detail', {'cat': 'appareils','slug': a.slug})}}"><i class="fas fa-book-open btn btn-primary mr-2"></i></a>
                    {% elseif category.libelle == 'divers' %}
                        <a href="{{path('annonce_detail', {'cat': 'divers','slug': a.slug})}}"><i class="fas fa-book-open btn btn-primary mr-2"></i></a>
                    {% endif %}
                    </div>
                </div>
            </div>
            <hr class="hrVol my-5">
            {% endfor %}
        </div>
        <div class="col-lg-3">
            {% include "partials/sidebar.html.twig" %}
        </div>
    </div>
</div>
{% endblock %}