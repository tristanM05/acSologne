{% extends "base.html.twig" %}
{% block body %}
<div class="wrapper container">
    <div class="row">
        <div class="col-lg-9 pr-3">
            <h1 class="text-center py-5">{{annonce.title}}</h1>
            <div id="carouselExampleIndicators" class="carousel slide my-5 pl-4" data-ride="carousel">
                <ol class="carousel-indicators">
                {% for image in annonce.images %}
                    <li data-target="#carouselExampleIndicators" data-slide-to="{{loop.index0}}" {% if loop.first %}class="active" {% endif %}></li>
                {% endfor %}
                </ol>
                <div class="carousel-inner">
                    {% for image in annonce.images %}
                        <div class="carousel-item {% if loop.first %}active {% endif %}">
                            <img src="{{asset('images/annonce/' ~ image.src)}}" class="d-block w-100 imgSlide" alt="image-annonce">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>{{ annonce.title }}</h5>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="pl-4">
                <p class="adsP">{{annonce.content}}</p>
                <div class="container mt-5 cardMachine">
                    <div class="card">
                        <div class="card-header text-center">
                            <strong id="titleCard">Contact pour cette annonce</strong>
                        </div>
                        <div class="card-body">
                            <ul id="ulMachine">
                                <li><strong>E-mail:</strong> {{annonce.user.email}}</li>
                                <li><strong>Telephone</strong>: {{annonce.user.phone}}</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            {% include "partials/sidebar.html.twig" %}
        </div>
    </div>
</div>
{% endblock %}