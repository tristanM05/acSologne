{% extends 'base.html.twig' %}

{% block title %}Les Annonces{% endblock %}

{% block body %}
<div class="wrapper container">
    <div class="row">
        <div class="col-lg-9">
            <h1 class="text-center py-5">Les petites annonces</h1>
            {% for a in annonce %}
            <div class="row p-3 mt-2">
                <div class="col-lg-4">
                    <img src="{{asset('images/annonce/' ~ a.images.first.src)}}" alt="" class="img-fluid mt-2 imgActu">
                </div>   
                <div class="col-lg-8">
                    <h2>{{a.title}}</h2>
                    <p>
                        {% if a.content | length >=   200 %}
                            <td>{{a.content | slice(0, 200)}}... <a href="">Voir plus</a> </td>
                        {% else %}
                            <td>{{a.content}}</td>
                        {% endif %}
                    </p>
                    <p>Categorie: <a href="{{path('annonce_cat',{'cat': a.annonceCat.libelle})}}">{{a.annonceCat.libelle}}</a></p>
                    <a href="{{path('annonce_show',{'slug': a.slug})}}"><i class="fas fa-book-open btn btn-primary mr-2"></i></a>
                </div>
            </div>
            <hr class="hrVol my-5">
            {% endfor %}
        </div>
        <div class="col-lg-3">
            {% include "partials/sidebar.html.twig" %}
        </div>
    </div>
</div>
{% endblock %}