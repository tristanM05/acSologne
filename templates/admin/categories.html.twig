{% extends 'baseAdmin.html.twig' %}

{% block title %}Tarifs catégories{% endblock %}

{% block monTitre %}Tarifs des catégories{% endblock %}

{% block body %}
<div class="row">
    <div class="col-10 p-0">
        {% for message in app.flashes('success') %}
        <div class="container alert alert-success m-0 text-center">
            {{message}}
        </div>
{% endfor %}
    </div>
</div>
<table class="table table-hover text-center">
    <tr class="table-primary">
        <td>Nom de la catégorie</td>
        <td>Actions</td>
    </tr>
    {% for c in categ %}
        <tr>
            <td><strong>{{c.libelle}}</strong></td>
            <td>
                <a href="{{path('modifCateg',{'id': c.id})}}" class="btn btn-secondary">Modifier</a>
            </td>
        </tr>
    {% endfor %}
</table>
{% endblock %}
