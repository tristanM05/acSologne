{% extends 'baseAdmin.html.twig' %}

{% block title %}Actualité{% endblock %}

{% block monTitre %}Les actualités{% endblock %}

{% block body %}
    <a href="{{ path('createActu') }}" class="btn btn-success m-4">Ajoutez</a>
{% for message in app.flashes('success') %}
    <div class="container alert alert-success">
        {{message}}
    </div>
{% endfor %}
<table class="table table-hover text-center">
    <tr class="table-primary">
        <td>Titre</td>
        <td>Date de création</td>
        <td>Contenu</td>
        <td>Actions</td>
    </tr>
    {% for a in actu %}
        <tr>
            <td><strong>{{a.title}}</strong></td>
            <td>{{a.createdAt|date("m/d/Y")}}</td>
            {% if a.content | length >=   100 %}
                    <td>{{a.content | slice(0, 100)}}... <a href="{{path('modifActu',{'id': a.id})}}">Voir plus</a> </td>
                {% else %}
                    <td>{{a.content}}</td>
                {% endif %}
            <td>
                <a href="{{path('modifActu',{'id': a.id})}}" class="btn btn-secondary">Modifier</a>
                <form method="POST" style="display:inline-block" action="{{path('supActu',{'id':a.id})}}" onsubmit="return confirm('Confirmer la suppression')">
                <input type="hidden" name="_method" value="delete">
                <input type="hidden" name="_token" value="{{csrf_token('SUP' ~ a.id)}}">
                    <input type="submit" class="btn btn-danger" value="supprimer">
                </form>
            </td>
        </tr>
    {% endfor %}
</table>
{% endblock %}
