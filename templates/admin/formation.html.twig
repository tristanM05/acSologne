{% extends 'baseAdmin.html.twig' %}

{% block title %}Formations{% endblock %}

{% block monTitre %}Les formations{% endblock %}

{% block body %}
    <a href="{{ path('createFormation') }}" class="btn btn-success m-4">Ajoutez</a>
{% for message in app.flashes('success') %}
    <div class="container alert alert-success text-center">
        {{message}}
    </div>
{% endfor %}
<table class="table table-hover text-center">
    <tr class="table-primary">
        <td>Titre</td>
        <td>Cat√©gorie</td>
        <td>Actions</td>
    </tr>
    
        {% for f in formations %}
        <tr>
            <td><strong>{{f.title}}</strong></td>
            <td>{{f.categories.libelle}}</td>
            <td>
                <a href="{{path('modifFormation',{'id': f.id})}}" class="btn btn-secondary">Modifier</a>
                <form method="POST" style="display:inline-block" action="{{path('supFormation',{'id':f.id})}}" onsubmit="return confirm('Confirmer la suppression')">
                <input type="hidden" name="_method" value="delete">
                <input type="hidden" name="_token" value="{{csrf_token('SUP' ~ f.id)}}">
                    <input type="submit" class="btn btn-danger" value="supprimer">
                </form>
            </td>
        </tr>
        {% endfor %}
    
</table>
{% endblock %}
