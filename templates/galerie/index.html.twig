{% extends "base.html.twig" %}
{% block title %}
    La galerie
{% endblock %}
{% block body %}
<div class="wrapper container">
    <div class="row">
        <div class="col-lg-9">
            <h1 class="text-center py-5">Les albums photo</h1>
            {% for a in album %}
            <div class="row p-3 mt-2">
                <div class="col-lg-4">
                    <img src="{{asset('images/album/' ~ a.images.first.src)}}" alt="image-galerie" class="img-fluid mt-2 imgActu">
                </div>   
                <div class="col-lg-8">
                    <h2>{{a.titre}}</h2>
                    <p>
                        {{a.description|slice(0,200)}}...
                    </p>
                    <a href="{{path('album_show', {'slug': a.slug})}}" id="aAlbum" class="btn btn-primary"><i class="fas fa-images mr-2"></i>Toutes les photos</a>
                    <div class="mt-2">
                        <small>Post√© le: {{a.createdAt|date("d/m/Y")}}</small>
                    </div>
                </div>
            </div>
            <hr class="hrVol my-5">
            {% endfor %}
        </div>
        <div class="col-lg-3">
            {% include "partials/sidebar.html.twig" %}
        </div>
    </div>
    </div>
    {% endblock %}