{% extends "base.html.twig" %}
{% block body %}
<div class="wrapper container">
    <div class="row">
        <div class="col-lg-9 pr-3">
            <h1 class="text-center py-5">{{formation.title}}</h1>
            <hr id="hrContact">
            <div id="carouselExampleIndicators" class="carousel slide my-5 pl-4" data-ride="carousel">
                <ol class="carousel-indicators">
                {% for image in formation.images %}
                    <li data-target="#carouselExampleIndicators" data-slide-to="{{loop.index0}}" {% if loop.first %}class="active" {% endif %}></li>
                {% endfor %}
                </ol>
                <div class="carousel-inner">
                    {% for image in formation.images %}
                        <div class="carousel-item {% if loop.first %}active {% endif %}">
                            <img src="{{asset('images/formation/' ~ image.src)}}" class="d-block w-100" alt="image-formation">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>{{ formation.title }}</h5>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="pl-4">
                <p>{{formation.content|raw}}</p>
            </div>
            {% for f in other_formation %}
            <div class="row p-3 mt-5">
                <div class="col-lg-4 text-center">
                    <img src="{{asset('images/formation/' ~ f.images.first.src)}}" alt="image-formation" class="img-fluid mt-2 imgActuShow">
                </div>   
                <div class="col-lg-8">
                    <h2>{{f.title}}</h2>
                    <p>
                        Toutes les informations !
                    </p>
                    <a href="{{path('formation_show', {'slug': f.slug})}}"><i class="fas fa-book-open btn btn-primary mr-2"></i></a>
                </div>
            </div>
            {% endfor %}
        </div>
        <div class="col-lg-3">
            {% include "partials/sidebar.html.twig" %}
        </div>
    </div>
</div>
{% endblock %}